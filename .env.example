# Environment Variables Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ====================
# Growatt API Settings
# ====================
GROWATT_USERNAME=your_email@example.com
GROWATT_PASSWORD=your_password_here
GROWATT_API_TOKEN=your_api_token_here
GROWATT_PLANT_ID=your_plant_id
GROWATT_DEVICE_SN=your_device_serial_number

# ====================
# Email Settings
# ====================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
# For Gmail, use App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
SENDER_PASSWORD=your_app_password_here
# Comma-separated list of recipient emails
RECIPIENT_EMAILS=recipient1@example.com,recipient2@example.com

# ====================
# Monitoring Thresholds
# ====================
POWER_THRESHOLD=709
VOLTAGE_THRESHOLD=51
CHECK_INTERVAL_MINUTES=15
POWER_DURATION_HOURS=1
VOLTAGE_ALERT_INTERVAL_HOURS=1

# ====================
# Email Configuration
# ====================
ENABLE_INSTANT_ALERTS=true
ENABLE_DAILY_REPORTS=true
DAILY_REPORT_TIME=18:00

# ====================
# Optional: WhatsApp Settings
# ====================
WHATSAPP_GROUP_NAME=Solar Monitoring Group
WHATSAPP_PHONE_NUMBER=+1234567890
